@page

@*资源分类权限*@
<util-tabset tab-position="Left" bindon-selected-index="selectedTabIndex">
    @*授予权限*@
    <util-container ng-if="!isDeny">
        <util-container acl="permission.grantOperation">
            @*授予操作权限*@
            <util-tab lazy="true" title="identity.permission.operationPermission">
                <operation-permission [role]="role" [application]="application" [isDeny]="false"></operation-permission>
            </util-tab>
        </util-container>
        <util-container acl="permission.grantApi">
            @*授予Api权限*@
            <util-tab lazy="true" title="identity.permission.apiPermission" >
                <api-permission [role]="role" [application]="application" [isDeny]="false"></api-permission>
            </util-tab>
        </util-container>
    </util-container>

    @*拒绝权限*@
    <util-container ng-if="isDeny">
        <util-container acl="permission.denyOperation">
            @*拒绝操作权限*@
            <util-tab lazy="true" title="identity.permission.operationPermission" >
                <operation-permission [role]="role" [application]="application" [isDeny]="true"></operation-permission>
            </util-tab>
        </util-container>
        <util-container acl="permission.denyApi">
            @*拒绝Api权限*@
            <util-tab lazy="true" title="identity.permission.apiPermission">
                <api-permission [role]="role" [application]="application" [isDeny]="true"></api-permission>
            </util-tab>
        </util-container>
    </util-container>
</util-tabset>
