@page
@model ApplicationDto

@*表单*@
<util-form label-span="6" control-span="18" gutter="24">
    <util-card borderless="true">
        <util-input for="Code" />
        <util-input for="Name" />
        <util-switch for="Enabled"></util-switch>
        <util-switch for="IsClient" on-model-change="toggleIsClient($event)" extra="identity.application.clientExplain"></util-switch>
        <util-textarea for="Remark"></util-textarea>
    </util-card>
    <util-card title="identity.application.clientInfo" ng-if="isClient" borderless="true">
        <util-select for="AllowedGrantType"></util-select>
        <util-input for="AllowedCorsOrigins" />
        <util-switch for="AllowOfflineAccess"></util-switch>
        <util-select for="AllowedScopes" url="application/scopes" mode="Multiple"></util-select>
        <util-input-number for="AccessTokenLifetime" extra="identity.application.accessTokenLifetimeExplain" />
        <util-input for="RedirectUri" extra="identity.application.redirectUriExplain" />
        <util-input for="PostLogoutRedirectUri" extra="identity.application.redirectUriExplain" />
    </util-card>
    <util-drawer-footer justify="FlexEnd">
        <util-button on-click="close()" text-cancel="true"></util-button>
        <util-button id="btnSubmit" is-submit="true" validate-form="true" type="Primary" on-click="submit(btnSubmit)" text-ok="true"></util-button>
    </util-drawer-footer>
</util-form>