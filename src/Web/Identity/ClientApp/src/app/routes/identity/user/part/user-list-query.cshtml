@model UserQuery

<util-card borderless="true" class="searchForm">
    <util-search-form label-width="140">
        <util-row gutter="24">
            <util-column>
                <util-input for="UserName" />
            </util-column>
            <util-column>
                <util-input for="Email" />
            </util-column>
            <util-column>
                <util-input for="PhoneNumber" />
            </util-column>
            <util-column>
                <util-select for="Enabled" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginDisabledTime" for-end="EndDisabledTime" />
            </util-column>
            <util-column>
                <util-select for="LockoutEnabled" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginLockoutEnd" for-end="EndLockoutEnd" />
            </util-column>
            <util-column>
                <util-input for="RegisterIp" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginLastLoginTime" for-end="EndLastLoginTime" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginCurrentLoginTime" for-end="EndCurrentLoginTime" />
            </util-column>
            <util-column>
                <util-input for="CurrentLoginIp" />
            </util-column>
            <util-column>
                <util-input for="LastLoginIp" />
            </util-column>
            <util-column>
                <util-input for="Remark" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginCreationTime" for-end="EndCreationTime" />
            </util-column>
            <util-column>
                <util-range-picker for-begin="BeginLastModificationTime" for-end="EndLastModificationTime" />
            </util-column>
            <util-column class="mb-md">
                <util-flex justify="FlexEnd" align="Center" gap="Small">
                    <util-button id="btnRefresh" icon="Sync" on-click="refresh(btnRefresh)" text-reset="true"></util-button>
                    <util-button id="btnQuery" type="Primary" icon="Search" on-click="query(btnQuery)" text-query="true"></util-button>
                    <util-a is-search="true" class="ml-sm"></util-a>
                </util-flex>
            </util-column>
        </util-row>
    </util-search-form>
</util-card>