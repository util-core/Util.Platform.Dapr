@page
@model CommonOperationDto
<util-page-header2 title="identity.commonOperation" auto-breadcrumb="false" sync-title="false"></util-page-header2>
<util-card borderless="true">
    @*查询表单*@
    <partial name="Index.Query" />
    @*工具按钮*@
    <util-button type="Primary" icon="Plus" on-click="add()" text-create="true" acl="commonOperation.create"></util-button>
    <util-button id="btn_save" type="Primary" icon="Save" on-click="save(btn_save)" text-save="true" acl="commonOperation.save"></util-button>
    <util-button type="Primary" danger="true" icon="Delete" on-click="delete()" text-delete="true" acl="commonOperation.delete"></util-button>
    @*提示语*@
    <util-alert type="Info" show-icon="true" class="my-md">
        <util-i18n key="app.rowsSelected" param="length:getCheckedLength()" />
    </util-alert>
    @*表格*@
    <util-table id="tb_commonOperation" show-checkbox="true" show-line-number="true" query-param="queryParam" url="commonOperation" sort="SortId">
        <util-td for="Name" is-edit="true" width="30%">
            <util-input for="Name" />
        </util-td>
        <util-td for="Enabled" is-edit="true">
            <util-td-display>
                <util-tag color-type="GeekBlue" ng-if="row.enabled" text-enabled="true"></util-tag>
                <util-tag color-type="Red" ng-if="!row.enabled" text-not-enabled="true"></util-tag>
            </util-td-display>
            <util-td-control>
                <util-select for="Enabled"></util-select>
            </util-td-control>
        </util-td>
        <util-td for="SortId" is-edit="true">
            <util-input-number for="SortId"></util-input-number>
        </util-td>
        <util-td for="Remark" is-edit="true" width="30%">
            <util-input for="Remark" />
        </util-td>
        <util-td title-operation="true" width="300" acl="commonOperation.save">
            <util-a on-click="edit(row.id)" text-update="true"></util-a>
            <util-container acl="commonOperation.delete">
                <util-divider type="Vertical"></util-divider>
                <util-a danger="true" on-click="delete(row.id)" text-delete="true"></util-a>
            </util-container>
        </util-td>
    </util-table>
</util-card>