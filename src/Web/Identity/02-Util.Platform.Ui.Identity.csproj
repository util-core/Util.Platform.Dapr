		<None Remove="$(SpaRoot)start.ps1" />
    </ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\Services\Identity\Util.Platform.Identity.Share\Util.Platform.Identity.Share.csproj" />
	</ItemGroup>
